  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTests.js",
    "deploy": "vsce publish -p"
