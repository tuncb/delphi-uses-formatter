{
  "name": "pascal-uses-formatter",
  "displayName": "pascal-uses-formatter",
  "description": "sorts the uses section in pascal files",
  "version": "0.4.2",
  "publisher": "tuncb",
  "repository": "https://github.com/tuncb/delphi-uses-formatter",
  "license": "Apache-2.0",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:pascal",
    "onLanguage:objectpascal"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "pascal-uses-formatter.formatUses",
        "title": "Format uses section"
      }
    ],
    "configuration": {
      "title": "pascal-uses-formatter",
      "properties": {
        "pascal-uses-formatter.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Format uses section automatically after first activation",
          "order": 1
        },
        "pascal-uses-formatter.updateUnitNames": {
          "type": "boolean",
          "default": true,
          "description": "Update unit names in uses section",
          "order": 2
        },
        "pascal-uses-formatter.unitNamesToUpdate": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "System.SysUtils"
          ],
          "description": "Unit names to update. If the part after the last '.' is found it is replaced with the full name.",
          "order": 3
        },
        "pascal-uses-formatter.overrideSortingOrder": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Override default namespace sorting order. Configure sorting priority by adding namespace to array",
          "order": 4
        },
        "pascal-uses-formatter.formattingStyle": {
          "type": "string",
          "enum": [
            "Comma at the end",
            "Comma at the beginning"
          ],
          "markdownEnumDescriptions": [
            "Unit1,",
            ", Unit1"
          ],
          "default": "Comma at the end",
          "description": "Formatting style for units",
          "order": 5
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTests.js",
    "deploy": "vsce publish -p"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.18.119",
    "@types/vscode": "^1.95.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.1",
    "chai": "^4.5.0",
    "eslint": "^8.57.1",
    "glob": "^7.2.3",
    "mocha": "^10.8.2",
    "source-map-support": "^0.5.21",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "ci": "^2.3.0"
  }
}